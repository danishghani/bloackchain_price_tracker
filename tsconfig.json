{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", 
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist", 
    "rootDir": "./src"  
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}
